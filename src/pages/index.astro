<style>
  .scroll {
    overflow: auto;
    scroll-snap-type: y mandatory;
    scroll-behavior: smooth;
    position: relative;
    z-index: 1;
    height: 100%;

    & > section {
      scroll-snap-align: center;
      scroll-snap-stop: always;
      overflow: hidden;
      z-index: 3;
    }

    @media (min-width: 0px) {
      section {
        min-height: 560px;
      }
      @media (max-height: 559px) {
        scroll-snap-type: none;
        section {
          min-height: 550px;
          margin: 3rem auto;
          border-radius: 2rem;
        }
      }
    }

    @media (min-width: 501px) {
      section {
        min-height: 750px;
      }
      @media (max-height: 749px) {
        scroll-snap-type: none;
        section {
          margin: 3rem auto;
          border-radius: 2rem;
        }
      }
    }

    @media (min-width: 1025px) {
      section {
        min-height: 650px;
      }
      @media (max-height: 649px) {
        scroll-snap-type: none;
        section {
          margin: 3rem auto;
          border-radius: 2rem;
        }
      }
    }

    @media (min-width: 1441px) {
      section {
        min-height: 750px;
      }
      @media (max-height: 649px) {
        scroll-snap-type: none;
        section {
          margin: 3rem auto;
          border-radius: 2rem;
        }
      }
    }

    &::-webkit-scrollbar {
      width: 10px;
      opacity: 0.3;

      @media (max-width: 1000px) {
        width: 3px;
      }
    }

    &::-webkit-scrollbar-track {
      background-color: var(--primary);
      border-radius: 1rem;
    }
    &::-webkit-scrollbar-thumb {
      background-color: var(--secondary);
      border-radius: 1rem;
    }

    & > img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: auto;
      z-index: 2;
    }
  }
  section {
    /* margin-bottom: 140px; */
    height: 90%;
    min-height: fit-content;
    width: 90%;
    margin: 10rem auto;
    background-color: var(--primary);
    /* border-radius: 8rem; */
    border-bottom-left-radius: 2rem;
    border-bottom-right-radius: 2rem;
    transition: 0.5s all ease-in;
    box-shadow: 0 10px 0px rgba(0, 0, 0, 0);
    position: relative;

    &:hover {
      box-shadow: 0 15px 50px rgba(0, 0, 0, 0.8);
    }

    /* @media (min-width: 1441px) {
			min-height: 750px;
			@media (max-height: 749px) {
				scroll-snap-align: unset;
				scroll-snap-stop: unset;
			}
		} */

    @media (max-width: 1440px) {
      width: 95%;
      height: 95%;
      border-radius: 2rem;
      /* min-height: 650px;

			@media (max-height: 649px) {
				scroll-snap-align: unset;
				scroll-snap-stop: unset;
			} */

      & > div {
        padding-top: 3rem;
      }
    }

    /* @media (max-width: 1024px) {
			min-height: 760px;
			@media (max-height: 759px) {
				scroll-snap-align: unset;
				scroll-snap-stop: unset;
			}
		}*/

    @media (max-width: 500px) {
      box-shadow: 0 15px 30px rgba(0, 0, 0, 0.6);
    }
  }
</style>
