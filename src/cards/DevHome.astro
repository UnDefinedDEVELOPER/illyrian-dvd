---
import Button from "../components/client/Button.svelte";
import DevStack from "../components/assets/DevStack.svelte";
---

<div id="dev-card" class="flex flex-col justify-between">
    <header class="flex justify-between items-center">
        <h1>DEVELOPMENT</h1>
        <img class="logo" src="/full_logo_white.png" width="350" height="180" />
    </header>
    <div class="h-max flex justify-center items-end gap-8">
        <div class="text">
            <p>
                <strong>Front-End Developer</strong>-<br />I specialize in
                developing visually exceptional, content-driven web solutions.<br
                /><br />Check out my skills and my <strong>portfolio!</strong>
            </p>
            <div class="cta-button">
                <Button
                    bg="#000"
                    color="#fff"
                    radius="15px"
                    text="Learn more"
                    bold={false}
                    uppercase={false}
                    client:load
                />
            </div>
        </div>
        <div class="image">
            <DevStack />
        </div>
    </div>
</div>

<style>
    #dev-card {
        height: 100%;
        background: url("/dev-hero-bg.svg") no-repeat center/cover;
        color: #fff;

        header {
            width: 85%;
            margin: auto;
            margin-top: 3rem;
            height: 20%;
            /* padding: 3rem 6rem 0 6rem; */
            h1 {
                font-size: 4rem;
                font-weight: 900;
            }
        }

        & > div {
            height: 70%;
            width: 80%;
            margin: auto;

            @media (min-width: 768px) {
                @media (max-height: 800px) {
                    height: 60%;
                }
            }
            .text {
                width: 45%;
                font-size: 2.25rem;
                line-height: 1.3;
                align-self: start;
                padding-top: 2rem;

                @media (min-width: 768px) {
                    @media (max-height: 800px) {
                        padding-top: 2rem;
                        font-size: 1.75rem;
                        line-height: normal;
                    }
                }
                p {
                    margin-bottom: 2rem;
                }

                .cta-button {
                    font-size: 1.25rem;
                    width: 45%;
                }
            }
            .image {
                align-self: start;
                width: 50%;
                height: 100%;

                @media (min-width: 768px) {
                    @media (max-height: 800px) {
                        width: 40%;
                    }
                }
            }
        }
    }
</style>
