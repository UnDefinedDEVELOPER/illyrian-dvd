---
import Button from "../components/client/Button.svelte";
import DevStack from "../components/assets/DevStack.svelte";
import FullLogo from "../components/assets/FullLogo.svelte";
---

<div id="dev-card" class="flex flex-col justify-between">
    <header class="flex justify-between items-center">
        <h1>DEVELOPMENT</h1>
        <div class="img flex h-full align-center">
            <FullLogo width="350" height="180" color="white" client:load />
        </div>
    </header>
    <div>
        <div class="text">
            <p>
                <strong>Front-End Developer</strong>-<br />I specialize in
                developing visually exceptional, content-driven web solutions.<br
                /><br />Check out my skills and my <strong>portfolio!</strong>
            </p>
            <div class="cta-button">
                <Button
                    bg="#000"
                    color="#fff"
                    radius="15px"
                    text="Learn more"
                    bold={false}
                    uppercase={false}
                    client:load
                />
            </div>
        </div>
        <div class="image">
            <DevStack />
        </div>
    </div>
</div>

<style>
    #dev-card {
        height: 100%;
        min-height: fit-content;
        background: url("/dev-hero-bg.svg") no-repeat center/cover;
        color: #fff;

        @media (max-width: 1440px) {
            padding-top: 3rem;
        }

        header {
            width: 85%;
            margin: 0 auto;
            margin-top: 3rem;
            height: 20%;
            min-height: 100px;

            @media (max-width: 1440px) {
                width: 80%;
                margin-top: 1rem;
                height: 15%;
            }

            @media (max-width: 1024px) {
                margin-top: 0.5rem;
                height: 10%;
                width: 90%;
            }

            @media (max-width: 767px) {
                justify-content: center;
            }

            h1 {
                font-size: 4rem;
                font-weight: 900;

                @media (max-width: 1440px) {
                    font-size: 3rem;
                }

                @media (max-width: 425px) {
                    font-size: 2.5rem;
                }

                @media (max-width: 320px) {
                    font-size: 2rem;
                }
            }

            .img {
                height: 100%;
                width: auto;
                max-height: 200px;
                @media (max-width: 1024px) {
                    height: 100%;
                    width: auto;
                    max-height: 200px;
                }
            }
        }

        & > div {
            height: 75%;
            width: 90%;
            max-width: 1440px;
            margin: 0 auto;
            display: flex;
            justify-content: space-around;
            align-items: center;

            @media (max-width: 1440px) {
                height: 80%;
            }

            @media (max-width: 1024px) {
                flex-direction: column;
                justify-content: space-between;
                align-items: center;
                gap: 2rem;
            }

            @media (max-width: 767px) {
                height: 85%;
            }

            @media (max-width: 500px) {
                width: 100%;
            }

            .text {
                width: 45%;
                font-size: 2rem;
                line-height: 1.3;
                align-self: center;

                @media (min-width: 1440px) {
                    padding-bottom: 4rem;
                }

                @media (max-width: 1440px) {
                    font-size: 1.5rem;
                    align-self: center;
                    padding-top: 0;
                }

                @media (max-width: 1024px) {
                    width: 90%;
                    margin: 0 auto;
                    margin-bottom: 1.5rem;
                    text-align: center;
                }

                @media (max-width: 500px) {
                    height: 40%;
                    display: flex;
                    flex-direction: column;
                    justify-content: center;
                }

                p {
                    margin-bottom: 2rem;

                    @media (max-width: 500px) {
                        margin-bottom: 1rem;
                    }
                }

                .cta-button {
                    font-size: 1.25rem;
                    width: 45%;
                    @media (max-width: 1024px) {
                        font-size: 1rem;
                        margin: 0 auto;
                    }

                    @media (max-width: 500px) {
                        width: 65%;
                    }
                }
            }
            .image {
                align-self: end;
                width: 50%;
                height: 100%;
                /* background-color: #fff; */

                @media (max-width: 1024px) {
                    height: 100%;
                    width: 100%;
                    align-self: start;
                }

                @media (max-width: 500px) {
                    height: 60%;
                    width: 100%;
                    align-self: start;
                }
            }
        }
    }
</style>
