<style>
    main {
        height: auto;
        position: relative;

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 80px;
            width: 85%;
            margin: 1rem auto 2.5rem auto;
            padding: 0 5%;
            border-radius: 4rem;
            position: sticky;
            top: 1rem;
            color: #fff;
            z-index: 100;
            background-color: var(--primary);
            transition: 0.2s all ease-in;
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.6);

            &:hover {
                box-shadow: 0 5px 20px rgba(0, 0, 0, 0.8);
            }

            h1 {
                font-family: "Righteous", sans-serif;
                font-size: 2.5rem;
                font-weight: 400;
            }

            nav,
            .static-nav {
                display: flex;
                gap: 2rem;

                a {
                    font-size: 1.875rem;
                    font-weight: 400;
                    transition: 0.25s all ease-in;
                    background-color: var(--primary);

                    &:hover {
                        color: var(--primary);
                        background-color: #fff;
                    }
                }
            }
        }

        .content {
            height: auto;
            width: 100%;
            margin: auto;

            overflow: hidden;
            /* overflow: visible; */
        }

        .frame {
            height: 85vh;
            top: 90px;
            width: 90%;
            margin: auto;
            overflow: hidden;
            position: relative;
            display: flex;
            flex-direction: column;

            .scroller {
                overflow: auto;
                flex-grow: 1;
                &::-webkit-scrollbar {
                    width: 10px;
                    opacity: 0.3;
                }

                &::-webkit-scrollbar-track {
                    background-color: var(--primary);
                    border-radius: 1rem;
                }
                &::-webkit-scrollbar-thumb {
                    background-color: var(--secondary);
                    border-radius: 1rem;
                }
            }
        }
    }
</style>
